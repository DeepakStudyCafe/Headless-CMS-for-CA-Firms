{
  "name": "headless-cms-system",
  "version": "1.0.0",
  "description": "Complete Headless CMS for managing CA firm websites",
  "scripts": {
    "install:all": "npm run install:backend && npm run install:admin && npm run install:firm1",
    "install:backend": "cd backend && npm install",
    "install:admin": "cd admin-dashboard && npm install",
    "install:firm1": "cd websites/firm1-sharma && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\" \"npm run dev:firm1\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin-dashboard && npm run dev",
    "dev:firm1": "cd websites/firm1-sharma && npm run dev",
    "build:all": "npm run build:backend && npm run build:admin && npm run build:firm1",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin-dashboard && npm run build",
    "build:firm1": "cd websites/firm1-sharma && npm run build",
    "db:migrate": "cd backend && npm run prisma:migrate",
    "db:seed": "cd backend && npm run seed",
    "db:studio": "cd backend && npm run prisma:studio"
  },
  "keywords": [
    "cms",
    "headless",
    "nextjs",
    "nodejs",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "concurrently": "^8.2.2"
  }
}
